@model projectManagementTool.Models.ProjectViewModel
@{
	ViewData["Title"] = "Create Project";
}

<div class="text-center">
	<h1 class="display-4">Create Project</h1>
</div>

<form asp-controller"Project" asp-action="CreateProject" method="post">
	<div class="form-group">
		<label for="txtProjectName">Project name</label>
		<input class="form-control" id="txtProjectName" placeholder="Project name" required 
			asp-for="@Model.Name"/>
	</div>
	<div class="form-group">
		<label for="txtDescription">Description</label>
		<input class="form-control" id="txtDescription" placeholder="Description"
			asp-for="@Model.Description"/>
	</div>
	<button type="submit" class="btn btn-primary">Create project</button>
</form>
